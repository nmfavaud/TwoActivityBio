<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nico.twoactivitybio.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/biography_logo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/buttonbuild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:text="Build biography"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:onClick="onClickBuild"/>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_weight="10"
        android:columnCount="4"
        android:rowCount="8"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">

        <EditText
            android:id="@+id/firstname"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:layout_marginBottom="10dp"
            android:layout_row="0"
            android:ems="10"
            android:hint="First Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/lastname"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:layout_marginBottom="10dp"
            android:layout_row="1"
            android:ems="10"
            android:hint="Last Name"
            android:inputType="textPersonName" />

        <Spinner
            android:id="@+id/mois"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2" />

        <Spinner
            android:id="@+id/jour"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_marginBottom="10dp"
            android:layout_row="2" />

        <Spinner
            android:id="@+id/annee"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="2" />

        <EditText
            android:id="@+id/school"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:layout_marginBottom="10dp"
            android:layout_row="3"
            android:ems="10"
            android:hint="School"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/yearofgraduation"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:layout_marginBottom="10dp"
            android:layout_row="4"
            android:ems="10"
            android:hint="Year of graduation"
            android:inputType="number" />

        <EditText
            android:id="@+id/degree"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:layout_marginBottom="10dp"
            android:layout_row="5"
            android:ems="10"
            android:hint="Degree"
            android:inputType="text" />

        <EditText
            android:id="@+id/major"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:layout_marginBottom="10dp"
            android:layout_row="6"
            android:ems="10"
            android:hint="Major"
            android:inputType="text" />

        <EditText
            android:id="@+id/activities"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:layout_row="7"
            android:ems="10"
            android:hint="Favorite activities"
            android:inputType="text" />

        <TextView
            android:id="@+id/firstnamet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:fontFamily="cursive"
            android:text="First name :"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/lastnamet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:fontFamily="cursive"
            android:text="Last name :"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/birthdatet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:fontFamily="cursive"
            android:text="Birth date :"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/schoolt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:fontFamily="cursive"
            android:text="School :"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/yearofgraduationt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:fontFamily="cursive"
            android:text="Year of graduation :"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/degreet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="5"
            android:fontFamily="cursive"
            android:text="Degree :"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/majort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="6"
            android:fontFamily="cursive"
            android:text="Major :"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/activitiest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="7"
            android:fontFamily="cursive"
            android:text="Favorite activities :"
            android:textSize="24sp" />

    </GridLayout>

</android.support.constraint.ConstraintLayout>
